      <section
        id="section-certificert"
        class="section-certificert"
        style="background: #e8e9eb"
      >
        <div class="container overflow-hiden">
          <% if (typeof certificertHeading !== 'undefined' &&
          certificertHeading) { %> <%- certificertHeading %> <% } else { %>
          <h2 class="text-primary text-center fw-bold mb-2">Giấy chứng nhận</h2>

          <% } %>
          <div class="wrapper_dot">
            <div class="dot"></div>
          </div>
          <div class="list-certificate mt-4 owl-carousel owl-theme">
            <% if (typeof certificertSection !== 'undefined' &&
            certificertSection) { %> <%- certificertSection %> <% } else { %> <%
            } %>
          </div>
        </div>
      </section>

      <section id="category" class="category pt-5">
        <div class="container">
          <% if (typeof categoriesSection !== 'undefined' && categoriesSection)
          { %> <%- categoriesSection %> <% } else { %>
          <h2 class="text-primary text-center fw-bold mb-2">
            Danh mục sản phẩm
          </h2>

          <% } %>
          <div class="wrapper_dot">
            <div class="dot"></div>
          </div>
          <div class="content mt-3">
            <ul
              class="nav nav-pills mb-3 justify-content-center tab_btns_horizal"
            >
              <% for (let i = 0; i < categories.length; i++) { %>
              <li
                data-id="<%= categories[i].id %>"
                id="<%= i == 0 ? 'defaultOpenCat' : '' %>"
                onclick="hanndleOpenTabCat(event, '<%= categories[i].id %>','<%=lang %>');"
                class="nav-item position-relative col-lg-4 col-sm-12"
              >
                <button class="nav-link nav-link-horizal">
                  <div class="btn-inner">
                    <div
                      class="icon-box <% if (i == 1 || i == 2) { %> align-items-center <% } %>"
                    >
                      <% if(i == 0) { %>
                      <i class="fi fi-sr-webcam"></i>
                      <% } else if(i == 1) { %>
                      <i class="fi fi-sr-router"></i>
                      <% } else { %>
                      <i class="fa-solid fa-toolbox"></i>
                      <% } %>
                    </div>
                    <h4><%= categories[i].name %></h4>
                  </div>
                </button>
              </li>
              <% } %>
            </ul>
            <div id="content_tab_product">
              <% for (let i = 0; i < categories.length; i++) { %>
              <div class="tab-content" id="cat_<%= categories[i].id %>">
                <% let products = categories[i].products; %>
                <div class="tab-pane fade show active">
                  <div class="row pt-5 pb-4 position-relative">
                    <div class="col-lg-5">
                      <div
                        style="
                          width: 320px;
                          height: 300px;
                          max-width: unset;
                          visibility: hidden;
                        "
                        class="img-block-hidden"
                      ></div>
                      <div
                        style="max-height: 150px; overflow: scroll"
                        class="wp_name_product"
                      >
                        <% for (let j = 0; j < products.length; j++) { %>
                        <div
                          class="name-product name-product_<%=categories[i].id%> <%= j == 0 ? 'defaultOpenProduct' : '' %>"
                          onclick="hanndleOpenTabProduct(event, 'product_<%= products[j].id%>', '<%=categories[i].id%>')"
                        >
                          <p
                            style="border-radius: 10px"
                            class="mb-2 bg-primary pt-1 ps-3 pb-1 text-light product_name_btn cursor-pointer"
                          >
                            <span>
                              <i class="fa-regular fa-circle-check"></i>
                            </span>
                            <span class="cursor-pointer"
                              ><%=products[j].productname %></span
                            >
                          </p>
                        </div>
                        <% } %>
                      </div>
                    </div>

                    <div class="col-lg-7">
                      <% for (let j = 0; j < products.length; j++) { %>
                      <div
                        style="border-radius: 10px"
                        id="product_<%= products[j].id %>"
                        class="desc p-3 border border-primary cat_<%= categories[i].id %>"
                      >
                        <article class="article_product">
                          <%-products[j].productdesc %>
                        </article>
                        <div class="thumb_product">
                          <% for(let k = 0; k < products[j].images.length; k++)
                          { %>

                          <img
                            style="
                              width: 320px;
                              height: 300px;
                              max-width: unset;
                            "
                            data-index="<%= k %>"
                            class="<%= k === 0 ? 'active' : '' %>"
                            src="<%= products[j].images[k] %>"
                            alt="mobicam_product"
                          />

                          <% } %>
